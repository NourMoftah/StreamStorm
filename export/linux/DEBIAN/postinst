#!/bin/sh
set -e

# fix perms
chown -R root:root /opt/StreamStorm
chmod -R 755 /opt/StreamStorm
# ensure wrapper scripts are executable
chmod 755 /usr/bin/streamstorm /usr/bin/dgupdater || true

# update menu / desktop database (silently ignore missing tools)
if command -v update-desktop-database >/dev/null 2>&1; then
  update-desktop-database >/dev/null 2>&1 || true
  update-icon-caches >/dev/null 2>&1 || true
fi

exit 0
